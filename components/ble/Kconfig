menu "BLE component configuration"

config BLE_DEVICE_NAME
    string "HortusBLE"
    default "esp_grow_controller"

config BLE_PROV_USE_ESP_PROV
    bool "Use ESP BLE Provisioning (compatible with Espressif app)"
    default y

config BLE_PROV_SERVICE_NAME
    string "Provisioning service name (SSID for BLE provisioning)"
    depends on BLE_PROV_USE_ESP_PROV
    default "PROV_C3"

config BLE_PROV_POP
    string "Proof-of-Possession (PoP)"
    depends on BLE_PROV_USE_ESP_PROV
    default "abcd1234"

config BLE_PROV_SERVICE_UUID
    string "Provisioning service UUID"
    default "12345678-1234-5678-1234-56789abcdef0"

endmenu

menu "BLE testing"

config BLE_TESTING
    bool "Enable BLE testing hooks"
    default n

endmenu
